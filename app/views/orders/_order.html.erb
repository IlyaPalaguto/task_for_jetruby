<%= content_tag :tr, data: { order_id: order.id } do %>
  <%= content_tag :td, order.size %>
  <%= content_tag :td, order.rate %>
  <%= content_tag :td, "#{ order.departure_point } - #{ order.destination }" %>
  <%= content_tag :td, order.distance %>
  <%= content_tag :td, order.price %>
  <%= link_to '', order_path(order), class: 'hide', id: "edit-link-#{order.id}" %>
<% end %>
